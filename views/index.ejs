<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
  <link href="style.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body class="bg-light">
  <div class="container py-5">
    <%- include('partials/header'); %>
      <header class="mb-5 text-center">
        <h1 class="fw-bold">ðŸ“° Latest Blog Posts</h1>
        <p class="text-muted">Explore insights, trends, and stories from around the world</p>
      </header>
      <div class="mb-4 text-end">
        <a href="/new" class="btn btn-success">
          âž• Create New Post
        </a>
      </div>

      <div class="row g-4">
        <% posts.forEach(post=> { %>
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-primary fw-semibold">
                  <%= post.title %>
                </h5>
                <p class="card-text text-secondary flex-grow-1">
                  <%= post.content.substring(0, 150) %>...
                </p>

                <div class="d-flex justify-content-between align-items-center mt-3">
                  <div>
                    <small class="text-muted">By <%= post.author %></small><br>
                    <small class="text-muted">
                      <%= new Date(post.date).toDateString() %>
                    </small>
                  </div>
                </div>

                <!-- âœ… CRUD Buttons -->
                <div class="mt-3 d-flex justify-content-between">
                  <a href="/posts/<%= post.id %>" class="btn btn-outline-primary btn-sm">Read More</a>
                  <div>
                    <a href="/edit/<%= post.id %>" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/api/posts/delete/<%= post.id %>" class="btn btn-danger btn-sm">Delete</a>
                  </div>
                </div>

              </div>
            </div>
          </div>
          <% }) %>
      </div>



  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gmMgYF6e3t9rxUe2tp/3EoZ5kXvQZz8bRr6NIf2E/wz3h2Sdu1ZfD6q9b3A/5QvC"
    crossorigin="anonymous"></script>
</body>

</html>